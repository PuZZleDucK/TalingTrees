# Core Rails settings
RAILS_ENV=development
PORT=3000
RAILS_MAX_THREADS=5
WEB_CONCURRENCY=1
SECRET_KEY_BASE=change-me

# Local LLM configuration
OLLAMA_URL=http://localhost:11434
LLM_NAMING_MODEL=gemma3:4b
# LLM_NAMING_VERIFY_MODEL defaults to LLM_NAMING_MODEL when unset
LLM_CHAT_MODEL=gemma3:4b
LLM_SYSTEM_PROMPT_MODEL=gemma3:4b
# LLM_SYSTEM_PROMPT_VERIFY_MODEL defaults to LLM_SYSTEM_PROMPT_MODEL when unset

# Optional data sources
# DATABASE_URL=sqlite3:///$(pwd)/db/development.sqlite3
# BLAZER_DATABASE_URL=$DATABASE_URL
# MAPBOX_ACCESS_TOKEN=

# Test automation defaults
TEST_FIXED_TIME="2025-01-15 12:00:00 UTC"
SCREENSHOT_PORT=4001
